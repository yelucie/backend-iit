doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/tailwind.css')
    link(rel="stylesheet", href="https://rsms.me/inter/inter.css")
  body(class="min-h-screen")
    header
      nav(class="flex items-center justify-between p-6 mx-auto max-w-7xl lg:px-8")
        div(class="flex flex-1")
          div(class="flex gap-x-12")
            a(href="/" class="text-sm font-semibold leading-6 text-gray-900") Home
            a(href="/about" class="text-sm font-semibold leading-6 text-gray-900") About
            a(href="/concerts" class="text-sm font-semibold leading-6 text-gray-900") List of concerts
        div(class="flex items-center mt-3 sm:ml-4 sm:mt-0")
          if isLoggedIn
            p(class="justify-center text-xs tracking-tight text-center text-gray-900") #{jwt}
            button(type="button" class="inline-flex items-center px-3 py-2 ml-3 text-sm font-semibold text-white rounded-md shadow-sm bg-emerald-600 hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600")
              a(href="/logout") Logout
          else
            button(type="button" class="inline-flex items-center px-3 py-2 ml-3 text-sm font-semibold text-white rounded-md shadow-sm bg-emerald-600 hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600")
              a(href="/login") Login
        
    block content