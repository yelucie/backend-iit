generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model concert {
  id       String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title    String?  @db.String(255)
  band     String?  @db.String(255)
  location String?  @db.String(255)
  city     String?  @db.String(255)
  ticket   ticket[]
}

model ticket {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  date_buying DateTime? @default(now()) @db.Timestamp(6)
  quantity    BigInt?
  concert_id  String?   @db.Uuid
  user_id     String?   @db.Uuid
  concert     concert?  @relation(fields: [concert_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user        user?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model user {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname String?  @db.String(255)
  lastname  String?  @db.String(255)
  email     String?  @unique @db.String(255)
  password  String?  @db.String(255)
  ticket    ticket[]
}
